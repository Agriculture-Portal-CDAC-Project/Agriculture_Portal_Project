    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:backgroundTint="#A1C17D"
        android:layout_marginLeft="4dp"
        android:layout_weight="0.4"
        android:layout_marginRight="10dp"
        android:id="@+id/pesticide"
        android:text="Pesticides"
        android:onClick="getPesticide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:backgroundTint="#A1C17D"
        android:layout_weight="0.4"
        android:layout_marginRight="10dp"
        android:id="@+id/firtilizer"
        android:text="Insecticides"
        android:onClick="getFirtilizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:backgroundTint="#A1C17D"
        android:layout_weight="0.4"
        android:layout_marginRight="10dp"
        android:id="@+id/vegetable"
        android:text="vegetables"
        android:onClick="getVegetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
